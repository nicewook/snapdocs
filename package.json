{
  "name": "snapdocs",
  "version": "0.1.0",
  "description": "A CLI tool to generate beautiful HTML documentation from markdown files with theme support",
  "main": "dist/lib/index.js",
  "bin": {
    "snapdocs": "dist/bin/snapdocs.js",
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build",
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "npm run build && node dist/bin/snapdocs.js",
    "typecheck": "tsc --noEmit",
    "prepack": "npm run build"
  },
  "keywords": [
    "markdown",
    "documentation",
    "generator",
    "cli",
    "html",
    "themes",
    "docs"
  ],
  "author": {
    "name": "Hyunseok Jeong",
    "email": "kiwook.jeong@gmail.com",
    "url": "https://github.com/nicewook"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicewook/snapdocs.git"
  },
  "bugs": {
    "url": "https://github.com/nicewook/snapdocs/issues"
  },
  "homepage": "https://github.com/nicewook/snapdocs#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^4.0.3",
    "commander": "^14.0.0",
    "fs-extra": "^11.0.0",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "inquirer": "^8.2.6",
    "marked": "^16.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/handlebars": "^4.0.40",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^24.0.15",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "preferGlobal": true,
  "files": [
    "dist/",
    "templates/",
    "README.md",
    "LICENSE"
  ]
}
